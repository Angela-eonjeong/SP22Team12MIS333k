@model SetupProject.Models.Order

@{
    ViewData["Title"] = "My Cart";
}

<h1>Books on This Order</h1>
<table class="table table-primary">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    @foreach (OrderDetail od in Model.OrderDetails)
    {
        <tr>
            <td>@Html.DisplayFor(ModelItem => od.Book.Title)</td>
            <td>@Html.DisplayFor(ModelItem => od.Book.Author)</td>
            <td>@Html.DisplayFor(ModelItem => od.BookQuantity)</td>
            <td>@Html.DisplayFor(ModelItem => od.SumPrice)</td>
        </tr>
    }
</table>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompleteStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompleteStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderSubtotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderSubtotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingCost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShippingCost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderTotal)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
