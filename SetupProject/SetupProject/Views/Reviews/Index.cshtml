@model IEnumerable<SetupProject.Models.Book>
@{ ViewData["Title"] = "Index"; }

<h1>Book Bought</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-controller="Reviews" asp-action="Create" asp-route-id="@item.BookID" class="btn btn-primary">Create a Review <i class="fas fa-star-half-alt"></i></a>
                    <a asp-controller="Reviews" asp-action="Details" asp-route-id="@item.BookID" class="btn btn-info">Review Details <i class="fas fa-list-ul"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
