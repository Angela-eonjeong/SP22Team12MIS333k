@model IndexViewModel
@{
    ViewBag.Title = "Account Details";
}

<h4>Change your account settings</h4>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>User Name:</dt>
        <dd>@Model.FirstName</dd>

        <dt>User Name:</dt>
        <dd>@Model.LastName</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Address:</dt>
        <dd>@Model.Address</dd>

        <dt>City:</dt>
        <dd>@Model.City</dd>

        <dt>State:</dt>
        <dd>@Model.State</dd>

        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>

        @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
        {
            <dt>Payment Method Info:</dt>
            <dd>
                <a asp-controller="PaymentMethod" asp-action="Index" asp-route-id="@Model.Id">Payment details</a>
            </dd>

        }

        <dt>Password:</dt>
        <dd>
            <a asp-action="ChangePassword">Change your password</a>
        </dd>

        <dt>Modify Account Info:</dt>
        <dd>
            <a asp-action="ModifyAccount" asp-route-id="@Model.Id">Modify account details</a>

        </dd>





    </dl>
</div>