@model IEnumerable<SetupProject.Models.OrderReportVM>


<h2>
    All Orders Report
</h2>

<p>Displaying @ViewBag.SelectedRecords Records </p>

<table class="table">
    <thead>
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Order Date
            </th>
            <th>
                Book Titles (Quantity Ordered)
            </th>
            <th>
                Customer
            </th>
            <th>
                Order Revenue
            </th>
            <th>
                Order Cost
            </th>
            <th>
                Order Cost (per Book/Avg)
            </th>
            <th>
                Profit Margin
            </th>
            <th>
                Order Revenue - Order Cost (per Book/Avg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrderReportVM item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookTandQ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderCostAvg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfitMargin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfitMarginMinusAvg)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="ChooseReport" class="btn btn-secondary">Back to Reports</a>
</div>